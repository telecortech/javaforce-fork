<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="{56317B62-FDB6-4314-A3EB-E7AD1F623217}" Version="0.3" Language="1033" Name="jfRecordDesktop" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />

    <Icon Id="icon.ico" SourceFile="jrecorddesktop.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jrecorddesktop"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfRecordDesktop"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{3BE06EFB-D219-4A6E-9B93-97BE48F7C50B}">
        <File Id="jrecorddesktop.jar" Source="jrecorddesktop.jar" KeyPath="yes"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="jna.jar" Source="jna.jar"/>
        <File Id="jna_platform.jar" Source="jna-platform.jar"/>
        <File Id="jrecorddesktop32.exe" Source="jrecorddesktop32.exe"/>
        <File Id="jrecorddesktop64.exe" Source="jrecorddesktop64.exe"/>
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{363A7CF2-0F6F-4090-A518-884B028A213A}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfRecordDesktop" Description="Java RecordDesktop Editor" Target="[APPLICATIONROOTDIRECTORY]jrecorddesktop32.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfRecordDesktop" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
  </Product>
</Wix>
