<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="{2DE2BA57-E4DA-4F80-BF66-4A9E55476F42}" Version="0.10" Language="1033" Name="jfPasswords" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />

    <Icon Id="icon.ico" SourceFile="jpasswords.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jpasswords"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfPasswords"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{C7C14BE8-5033-429C-82F9-5B367ACFAAEB}">
        <File Id="jpasswords.jar" Source="jpasswords.jar" KeyPath="yes"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="jpasswords32.exe" Source="jpasswords32.exe"/>
        <File Id="jpasswords64.exe" Source="jpasswords64.exe"/>
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{C59F223F-82C9-4AB3-AAE1-B0678FE5CDD1}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfPasswords" Description="Java Passwords Manager" Target="[APPLICATIONROOTDIRECTORY]jpasswords32.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfPasswords" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
  </Product>
</Wix>
