<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" UpgradeCode="{52E091EA-4753-4970-B56C-DA6EEEDC26DC}" Version="0.16" Language="1033" Name="jfTerm" Manufacturer="Peter Quiring">
    <Package InstallerVersion="300" Compressed="yes"/>
    <Media Id="1" Cabinet="files.cab" EmbedCab="yes" />

    <Icon Id="icon.ico" SourceFile="jterm.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico"/>

    <!-- Step 1: Define the directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="APPLICATIONROOTDIRECTORY" Name="jterm"/>
      </Directory>
      <Directory Id="ProgramMenuFolder">
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <Directory Id="ApplicationProgramsFolder" Name="jfTerm"/> -->
      </Directory>
    </Directory>

    <!-- Step 2: Add files to your installer package -->
    <DirectoryRef Id="APPLICATIONROOTDIRECTORY">
      <Component Id="appfiles" Guid="{78D691A9-2F87-4C2C-907C-8A78B826CCDE}">
        <File Id="jterm.jar" Source="jterm.jar" KeyPath="yes"/>
        <File Id="javaforce.jar" Source="javaforce.jar"/>
        <File Id="jsch.jar" Source="jsch.jar"/>
        <File Id="jzlib.jar" Source="jzlib.jar"/>
        <File Id="jna.jar" Source="jna.jar"/>
        <File Id="jterm32.exe" Source="jterm32.exe"/>
        <File Id="jterm64.exe" Source="jterm64.exe"/>
      </Component>
    </DirectoryRef>

    <!-- Step 2b: Add the shortcut to your installer package -->
<!-- Change Id to ApplicationProgramsFolder if you want Shortcut in its own folder -->
    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ApplicationShortcut" Guid="{871FBA6F-04C4-4AFB-98D3-07B5FF00A091}">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="jfTerm" Description="Java Term Image Editor" Target="[APPLICATIONROOTDIRECTORY]jterm32.exe"
          WorkingDirectory="APPLICATIONROOTDIRECTORY"/>
<!-- Use the following if you want Shortcut in its own folder -->
<!--        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/> -->
        <RegistryValue Root="HKCU" Key="Software\Microsoft\jfTerm" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Step 3: Tell WiX to install the files -->
    <Feature Id="MainApplication" Title="Main Application" Level="1">
      <ComponentRef Id="appfiles" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>
  </Product>
</Wix>
